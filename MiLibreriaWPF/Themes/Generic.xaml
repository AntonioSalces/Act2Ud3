<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MiLibreriaWPF">


    <Style TargetType="{x:Type local:BotonRedondo}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BotonRedondo}">
                    <Border x:Name="PART_BordePrincipal"
                        Background="{TemplateBinding Background}"
                        CornerRadius="20"
                        Padding="10">

                        <ContentPresenter
                        Content="{TemplateBinding Content}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:ToggleColorButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ToggleColorButton}">
                    <Border x:Name="PART_BordePrincipal" 
                        Background="Blue" 
                        BorderBrush="Black" 
                        BorderThickness="2"
                        CornerRadius="5"
                        Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
